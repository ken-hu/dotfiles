# General shell aliases
alias ls="ls -xFG"
alias ll="ls -alF"
alias rm="rm -f"
alias gzip="gzip --best --verbose"
alias gunzip="gunzip --verbose"
alias diff="diff -u"
alias hosts="cat /etc/hosts | grep -i"
alias passwds="cat /etc/passwd | grep -i"
alias h=history
alias ag="ag --color-path '35' --color-match '1;32' --color-line-number ''"

# Other
alias mpic++='/usr/local/bin/mpic++'
alias mysql=/usr/local/mysql/bin/mysql

alias python=/usr/local/bin/python3.7
alias pip=/usr/local/bin/pip3.7
